<p id="notice"><%= notice %></p>

<h1>Listing Assigment</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assigment.each do |assigment| %>
      <tr>
        <td><%= assigment.name %></td>
        <td><%= link_to 'Show', assigment %></td>
        <td><%= link_to 'Edit', edit_assigment_path(assigment) %></td>
        <td><%= link_to 'Destroy', assigment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

